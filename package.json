{
    "name": "@open-cluster-management/ui-components",
    "version": "0.0.56",
    "description": "UI component library for open cluster management",
    "license": "Apache-2.0",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "files": [
        "lib"
    ],
    "scripts": {
        "build": "tsc",
        "build:storybook": "cross-env NODE_ENV=production build-storybook",
        "lint": "eslint --ext ts,tsx,js,jsx ./src --max-warnings=0",
        "lint:fix": "eslint --ext ts,tsx,js,jsx ./src --fix",
        "check": "prettier --check src",
        "check:fix": "prettier --write src",
        "start": "start-storybook -p 9000 --ci",
        "test": "jest",
        "test:ci": "jest --ci"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/open-cluster-management/ui-components.git"
    },
    "dependencies": {},
    "devDependencies": {
        "@babel/core": "^7.11.6",
        "@babel/preset-env": "^7.11.5",
        "@babel/preset-react": "^7.10.4",
        "@storybook/react": "^6.0.21",
        "@types/enzyme": "^3.10.6",
        "@types/enzyme-adapter-react-16": "^1.0.6",
        "@types/jest": "^26.0.13",
        "@types/react": "^16.9.49",
        "@types/react-dom": "^16.9.8",
        "@typescript-eslint/eslint-plugin": "^4.1.0",
        "@typescript-eslint/parser": "^4.1.0",
        "babel-jest": "^26.3.0",
        "babel-loader": "^8.1.0",
        "cross-env": "^7.0.2",
        "css-loader": "^4.3.0",
        "enzyme": "^3.11.0",
        "enzyme-adapter-react-16": "^1.15.4",
        "enzyme-to-json": "^3.5.0",
        "eslint": "^7.8.1",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-react": "^7.20.6",
        "jest": "^26.4.2",
        "jest-sonar-reporter": "^2.0.0",
        "prettier": "^2.1.1",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "sass": "^1.26.10",
        "sass-loader": "^10.0.2",
        "style-loader": "^1.2.1",
        "ts-jest": "^26.3.0",
        "ts-loader": "^8.0.3",
        "typescript": "^4.0.2"
    },
    "peerDependencies": {
        "react": "^16.13.1",
        "react-dom": "^16.13.1"
    },
    "eslintConfig": {
        "env": {
            "browser": true,
            "es6": true,
            "node": true,
            "jest": true
        },
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/eslint-recommended",
            "plugin:@typescript-eslint/recommended",
            "plugin:react/recommended",
            "plugin:prettier/recommended"
        ],
        "globals": {
            "Atomics": "readonly",
            "SharedArrayBuffer": "readonly"
        },
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "ecmaFeatures": {
                "jsx": true
            },
            "ecmaVersion": 2018,
            "sourceType": "module"
        },
        "plugins": [
            "react",
            "@typescript-eslint"
        ],
        "rules": {
            "indent": [
                "error",
                4
            ],
            "linebreak-style": [
                "error",
                "unix"
            ],
            "quotes": [
                "error",
                "single"
            ],
            "semi": [
                "error",
                "always"
            ],
            "@typescript-eslint/explicit-module-boundary-types": [
                "off"
            ]
        },
        "overrides": [
            {
                "files": [
                    "*.ts",
                    "*.tsx"
                ],
                "rules": {
                    "@typescript-eslint/explicit-module-boundary-types": [
                        "error"
                    ]
                }
            }
        ],
        "settings": {
            "react": {
                "version": "detect"
            }
        }
    },
    "jest": {
        "testEnvironment": "node",
        "clearMocks": true,
        "preset": "ts-jest",
        "rootDir": "./src",
        "setupFilesAfterEnv": [
            "<rootDir>/../jest.setup.ts"
        ],
        "snapshotSerializers": [
            "enzyme-to-json/serializer"
        ],
        "testPathIgnorePatterns": [
            "/node_modules/",
            "jest.setup.ts"
        ],
        "collectCoverage": true,
        "coverageDirectory": "<rootDir>/../coverage",
        "coverageThreshold": {
            "global": {
                "branches": 100,
                "functions": 100,
                "lines": 100,
                "statements": 100
            }
        },
        "transform": {
            "^.+\\.jsx?$": "babel-jest"
        },
        "coverageReporters": [
            "text-summary",
            "html",
            "lcov"
        ],
        "testResultsProcessor": "jest-sonar-reporter"
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": true,
        "quoteProps": "consistent",
        "trailingComma": "all"
    },
    "babel": {
        "presets": [
            "@babel/preset-env",
            "@babel/preset-react"
        ]
    }
}
